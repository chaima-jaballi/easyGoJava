<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.tn.pidev.controllers.ModifierReclamationController">
    <children>
        <!-- Titre -->
        <Label layoutX="200.0" layoutY="20.0" prefHeight="30.0" prefWidth="400.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Modifier la Réclamation" textAlignment="CENTER"/>

        <!-- ID Réclamation (Non modifiable) -->
        <Label layoutX="30.0" layoutY="60.0" prefHeight="30.0" prefWidth="120.0" text="ID Réclamation:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="idField" layoutX="170.0" layoutY="60.0" prefHeight="30.0" prefWidth="200.0" editable="false" style="-fx-background-color: #E0E0E0; -fx-font-size: 14px;" />

        <!-- Catégorie -->
        <Label layoutX="30.0" layoutY="110.0" prefHeight="30.0" prefWidth="100.0" text="Catégorie:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="categorieComboBox" layoutX="170.0" layoutY="110.0" prefHeight="30.0" prefWidth="300.0" style="-fx-font-size: 14px;" />

        <!-- Description -->
        <Label layoutX="30.0" layoutY="170.0" prefHeight="30.0" prefWidth="100.0" text="Description:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextArea fx:id="descriptionTextArea" layoutX="170.0" layoutY="170.0" prefHeight="120.0" prefWidth="300.0" promptText="Modifier la description" style="-fx-font-size: 14px; -fx-border-radius: 5px;" />

        <!-- Date de création (Non modifiable) -->
        <Label layoutX="30.0" layoutY="310.0" prefHeight="30.0" prefWidth="120.0" text="Date de Création:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="dateCreationField" layoutX="170.0" layoutY="310.0" prefHeight="30.0" prefWidth="300.0" editable="false" style="-fx-background-color: #E0E0E0; -fx-font-size: 14px;" />

        <!-- Boutons -->
        <Button fx:id="enregistrerButton" layoutX="40.0" layoutY="370.0" text="Enregistrer" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" />
        <Button fx:id="annulerButton" layoutX="210.0" layoutY="370.0" text="Annuler" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" />

    </children>
</AnchorPane>
