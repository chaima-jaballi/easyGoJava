<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.tn.pidev.controllers.TicketReclamationController">
    <children>

        <Label layoutX="200.0" layoutY="20.0" prefHeight="30.0" prefWidth="400.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Formulaire de Réclamation" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="22.0" />
            </font>
        </Label>

        <!-- Catégorie -->
        <Label layoutX="30.0" layoutY="80.0" prefHeight="30.0" prefWidth="100.0" text="Catégorie:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="categorieComboBox" layoutX="150.0" layoutY="80.0" prefHeight="30.0" prefWidth="300.0" style="-fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-color: #f0f0f0;" />

        <!-- Description -->
        <Label layoutX="30.0" layoutY="140.0" prefHeight="30.0" prefWidth="100.0" text="Description:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextArea fx:id="descriptionTextArea" layoutX="150.0" layoutY="140.0" prefHeight="120.0" prefWidth="300.0" promptText="Entrer la description" style="-fx-font-size: 14px; -fx-border-radius: 5px; -fx-border-color: #bbb; -fx-background-color: #f9f9f9;" />

        <!-- Date de création -->
        <Label layoutX="30.0" layoutY="280.0" prefHeight="30.0" prefWidth="120.0" text="Date de Création:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="dateCreationField" alignment="CENTER" editable="false" layoutX="150.0" layoutY="280.0" prefHeight="30.0" prefWidth="300.0" promptText="Entrer la date" style="-fx-font-size: 14px; -fx-border-radius: 5px; -fx-border-color: #bbb; -fx-background-color: #f9f9f9;" />

        <!-- Boutons -->
        <Button fx:id="envoyerButton" layoutX="40.0" layoutY="350.0" text="Envoyer" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-cursor: hand;" onMouseEntered="handleMouseEntered" onMouseExited="handleMouseExited"/>
        <Button fx:id="modifierButton" layoutX="160.0" layoutY="350.0" text="Modifier" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-cursor: hand;" onMouseEntered="handleMouseEntered" onMouseExited="handleMouseExited"/>
        <Button fx:id="supprimerButton" layoutX="280.0" layoutY="350.0" text="Supprimer" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-cursor: hand;" onMouseEntered="handleMouseEntered" onMouseExited="handleMouseExited"/>
        <Button fx:id="retourButton" layoutX="400.0" layoutY="350.0" text="Retour" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-cursor: hand;" onMouseEntered="handleMouseEntered" onMouseExited="handleMouseExited"/>
    </children>
</AnchorPane>
