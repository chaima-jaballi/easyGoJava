<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.Cursor?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.tn.pidev.controllers.DriverDashboardController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb); -fx-min-width: 900px; -fx-min-height: 600px;">

    <!-- En-tête avec bouton de retour amélioré -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10 15; -fx-background-color: #1976d2; -fx-background-radius: 5;">
        <Button onAction="#handleBackToStatus" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitWidth="28" fitHeight="28">
                    <Image url="@icons/fleche.png" />
                </ImageView>
            </graphic>
        </Button>
        <VBox spacing="5">
            <Label text="Tableau de bord Conducteur" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);"/>
            <Label text="Historique des réservations" style="-fx-font-size: 16px; -fx-text-fill: #e3f2fd; -fx-font-family: 'Segoe UI';"/>
        </VBox>
    </HBox>

    <!-- TableView avec style amélioré -->
    <TableView fx:id="reservationsTable" style="-fx-background-color: white; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <columns>
            <TableColumn fx:id="tripColumn" text="Trajet" prefWidth="150" style="-fx-alignment: CENTER_LEFT;"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="statusColumn" text="Statut" prefWidth="120" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="detailsColumn" text="Détails" prefWidth="200" style="-fx-alignment: CENTER_LEFT;"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200" style="-fx-alignment: CENTER;"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>