<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.tn.pidev.controllers.ClientReservationsController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f5f7fa;">

    <!-- En-tête avec bouton de retour -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button onAction="#handleBackToHome" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitWidth="24" fitHeight="24">
                    <Image url="@icons/fleche.png" />
                </ImageView>
            </graphic>
        </Button>
        <Label text="Mes Réservations" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
    </HBox>

    <!-- Boutons d'actions -->
    <HBox spacing="10" style="-fx-padding: 0 0 10 0;">
        <Button text="Modifier" onAction="#handleModifyReservation" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;" />
        <Button text="Supprimer" onAction="#handleDeleteReservation" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;" />
    </HBox>

    <!-- Tableau des réservations avec style intégré -->
    <TableView fx:id="reservationsTable" style="-fx-background-color: white; -fx-font-size: 14px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
        <!-- Configuration des colonnes -->
        <columns>
            <TableColumn fx:id="departureColumn" text="DÉPART" prefWidth="150"/>
            <TableColumn fx:id="destinationColumn" text="DESTINATION" prefWidth="150"/>
            <TableColumn fx:id="dateColumn" text="DATE" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="STATUT" prefWidth="100" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="priceColumn" text="PRIX (DT)" prefWidth="80" style="-fx-alignment: CENTER_RIGHT;"/>
            <TableColumn fx:id="detailsColumn" text="DÉTAILS" prefWidth="150"/>
            <TableColumn fx:id="actionColumn" text="ACTION" prefWidth="150" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>
</VBox>