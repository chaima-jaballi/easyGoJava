<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.esprit.tn.pidev.controllers.PaiementController"
      spacing="25" alignment="CENTER"
      style="-fx-padding: 40; -fx-background-color: linear-gradient(to bottom right, #E0EAFC, #CFDEF3);"
      prefWidth="1000" prefHeight="700">

    <!-- Titre et bouton de retour -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;">
        <ImageView fx:id="backButton" fitWidth="40" fitHeight="40" onMouseClicked="#handleBack"
                   style="-fx-cursor: hand;">
            <Image url="@icons/fleche.png"/>
        </ImageView>
        <Label text="Paiement"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #042c54; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>
    </HBox>

    <!-- Choix du mode de paiement -->
    <VBox spacing="20" alignment="CENTER_LEFT"
          style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0); -fx-pref-width: 800;">
        <Label text="Choisissez votre mode de paiement :"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #042c54; -fx-padding: 0 0 15 0;"/>

        <VBox spacing="15" style="-fx-padding: 0 0 0 20;">
            <RadioButton fx:id="payerEnLigne" text="Payer en ligne"
                         style="-fx-font-size: 18px; -fx-text-fill: #042c54;"
                         selected="false" onAction="#handleOnlinePayment"/>
            <RadioButton fx:id="payerEnReel" text="Payer en réel"
                         style="-fx-font-size: 18px; -fx-text-fill: #042c54;"
                         onAction="#handleInPersonPayment"/>
        </VBox>
    </VBox>

    <!-- Méthodes de paiement en ligne -->
    <VBox fx:id="onlinePaymentMethods" spacing="20" alignment="CENTER_LEFT"
          style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0); -fx-pref-width: 800;">
        <Label text="Méthodes de paiement en ligne :"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #042c54; -fx-padding: 0 0 15 0;"/>

        <VBox spacing="15" style="-fx-padding: 0 0 0 20;">
            <RadioButton fx:id="carteBancaire" text="Carte bancaire"
                         style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        </VBox>
    </VBox>

    <!-- Bouton pour passer à la deuxième interface -->
    <Button text="Suivant"
            style="-fx-background-color: linear-gradient(to bottom right, #1A2980, #26D0CE); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0); -fx-cursor: hand;"
            onAction="#handleNext">
        <graphic>
            <ImageView fitWidth="25" fitHeight="25">
                <Image url="@icons/next.png"/>
            </ImageView>
        </graphic>
    </Button>
</VBox>