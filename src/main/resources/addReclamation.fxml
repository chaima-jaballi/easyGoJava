<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #FFDEE9, #B5FFFC);" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.tn.pidev.controllers.TicketReclamationController">

    <children>
        <ImageView fitHeight="204.0" fitWidth="175.0" layoutX="550.0" layoutY="91.0" nodeOrientation="INHERIT" opacity="0.77" pickOnBounds="true" preserveRatio="true" smooth="false">
            <image>
                <Image url="@image/a.jpg" />
            </image>
        </ImageView>

        <Label layoutX="200.0" layoutY="20.0" prefHeight="30.0" prefWidth="400.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Formulaire de Réclamation" textAlignment="CENTER" />

        <Label layoutX="30.0" layoutY="80.0" prefHeight="30.0" prefWidth="100.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Catégorie:" />
        <ComboBox fx:id="categorieComboBox" layoutX="150.0" layoutY="80.0" prefHeight="40.0" prefWidth="300.0" promptText="Sélectionnez une catégorie" />

        <Label layoutX="30.0" layoutY="140.0" prefHeight="30.0" prefWidth="100.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Statut:" />
        <ComboBox fx:id="statutComboBox" layoutX="150.0" layoutY="140.0" prefHeight="40.0" prefWidth="300.0" promptText="Sélectionnez un statut" />

        <Label layoutX="30.0" layoutY="200.0" prefHeight="30.0" prefWidth="100.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Description:" />
        <TextArea fx:id="descriptionTextArea" layoutX="150.0" layoutY="200.0" prefHeight="120.0" prefWidth="300.0" promptText="Décrivez votre réclamation ici" style="-fx-font-size: 14px;" />

        <Label layoutX="10.0" layoutY="340.0" prefHeight="30.0" prefWidth="140.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Date de Création:" />
        <DatePicker fx:id="dateCreationField" layoutX="150.0" layoutY="340.0" prefHeight="40.0" prefWidth="300.0" />

        <Button fx:id="retourButton" layoutX="10.0" layoutY="10.0" prefHeight="30.0" prefWidth="50.0" style="-fx-background-color: transparent; -fx-font-size: 18px; -fx-text-fill: #2C3E50;                        -fx-border-color: transparent;" text="←" />

        <Button fx:id="envoyerButton" layoutX="150.0" layoutY="400.0" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 18px;                        -fx-background-radius: 10px;" text="Envoyer" />

        <Button fx:id="supprimerButton" layoutX="310.0" layoutY="400.0" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 18px;                        -fx-background-radius: 10px;" text="Supprimer" />
    </children>
</AnchorPane>
