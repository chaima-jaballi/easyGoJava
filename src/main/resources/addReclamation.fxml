<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.tn.pidev.controllers.TicketReclamationController">
    <children>

        <Label layoutX="200.0" layoutY="20.0" prefHeight="30.0" prefWidth="400.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Formulaire de Réclamation" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="22.0" />
            </font>
        </Label>

        <!-- Catégorie -->
        <Label layoutX="30.0" layoutY="80.0" prefHeight="30.0" prefWidth="100.0" text="Catégorie:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="categorieComboBox" layoutX="150.0" layoutY="80.0" prefHeight="30.0" prefWidth="300.0" />

        <!-- Statut -->
        <Label layoutX="30.0" layoutY="140.0" prefHeight="30.0" prefWidth="100.0" text="Statut:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="statutComboBox" layoutX="150.0" layoutY="140.0" prefHeight="30.0" prefWidth="300.0" />

        <!-- Description -->
        <Label layoutX="30.0" layoutY="200.0" prefHeight="30.0" prefWidth="100.0" text="Description:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextArea fx:id="descriptionTextArea" layoutX="150.0" layoutY="200.0" prefHeight="120.0" prefWidth="300.0" promptText="Entrer la description" />

        <!-- Date de création -->
        <Label layoutX="30.0" layoutY="340.0" prefHeight="30.0" prefWidth="120.0" text="Date de Création:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="dateCreationField" alignment="CENTER" editable="false" layoutX="150.0" layoutY="340.0" prefHeight="30.0" prefWidth="300.0" />

        <!-- Boutons -->
        <Button fx:id="envoyerButton" layoutX="40.0" layoutY="400.0" text="Envoyer" prefHeight="40.0" prefWidth="100.0" />
        <Button fx:id="modifierButton" layoutX="160.0" layoutY="400.0" text="Modifier" prefHeight="40.0" prefWidth="100.0" />
        <Button fx:id="supprimerButton" layoutX="280.0" layoutY="400.0" text="Supprimer" prefHeight="40.0" prefWidth="100.0" />
        <Button fx:id="retourButton" layoutX="400.0" layoutY="400.0" text="Retour" prefHeight="40.0" prefWidth="100.0" />

    </children>
</AnchorPane>
