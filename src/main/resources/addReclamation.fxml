<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #1E3C72, #2A5298);" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.tn.pidev.controllers.TicketReclamationController">
    <children>
        <ImageView fitHeight="200.0" fitWidth="180.0" layoutX="550.0" layoutY="80.0" opacity="0.9" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@image/a.jpg" />
            </image>
        </ImageView>

        <Label layoutX="200.0" layoutY="20.0" prefHeight="50.0" prefWidth="400.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: rgba(255, 255, 255, 0.2); -fx-padding: 10px; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-alignment: center;" text="Formulaire de Réclamation" />

        <Label layoutX="30.0" layoutY="80.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Catégorie:" />
        <ComboBox fx:id="categorieComboBox" layoutX="150.0" layoutY="80.0" prefHeight="40.0" prefWidth="300.0" promptText="Sélectionnez une catégorie" style="-fx-background-color: #ECEFF1; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 5px;" />

        <Label layoutX="30.0" layoutY="140.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Statut:" />
        <ComboBox fx:id="statutComboBox" layoutX="150.0" layoutY="140.0" prefHeight="40.0" prefWidth="300.0" promptText="Sélectionnez un statut" style="-fx-background-color: #ECEFF1; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 5px;" />

        <Label layoutX="30.0" layoutY="200.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Description:" />
        <TextArea fx:id="descriptionTextArea" layoutX="150.0" layoutY="200.0" prefHeight="120.0" prefWidth="300.0" promptText="Décrivez votre réclamation ici" style="-fx-font-size: 16px; -fx-background-color: #ECEFF1; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 5px;" />

        <Label layoutX="10.0" layoutY="340.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Date de Création:" />
        <DatePicker fx:id="dateCreationField" layoutX="150.0" layoutY="340.0" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #ECEFF1; -fx-border-radius: 10px; -fx-background-radius: 10px;" />

        <Button fx:id="retourButton" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: transparent; -fx-font-size: 22px; -fx-text-fill: white; -fx-border-color: transparent; -fx-font-weight: bold;" text="←" />

        <Button fx:id="envoyerButton" layoutX="150.0" layoutY="400.0" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 10, 0, 0, 5);" text="Envoyer" />

        <Button fx:id="supprimerButton" layoutX="310.0" layoutY="400.0" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 10, 0, 0, 5);" text="Supprimer" />
    </children>
</AnchorPane>
