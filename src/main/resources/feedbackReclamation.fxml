<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.tn.pidev.controllers.FeedbackController">
    <children>
        <!-- Titre -->
        <Label layoutX="20.0" layoutY="20.0" text="Donnez votre feedback :" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <!-- Champ pour la note -->
        <Label layoutX="20.0" layoutY="60.0" text="Note (1-5) :" />
        <TextField fx:id="ratingField" layoutX="120.0" layoutY="60.0" promptText="Entrez une note entre 1 et 5" />

        <!-- Conteneur pour afficher les étoiles -->
        <HBox fx:id="ratingStarsHBox" layoutX="120.0" layoutY="90.0" spacing="5" alignment="CENTER"/>

        <!-- Champ pour la catégorie -->
        <Label layoutX="20.0" layoutY="130.0" text="Catégorie :" />
        <ComboBox fx:id="categoryComboBox" layoutX="120.0" layoutY="130.0" promptText="Sélectionnez une catégorie" />

        <!-- Champ pour le commentaire -->
        <Label layoutX="20.0" layoutY="170.0" text="Commentaire :" />
        <TextArea fx:id="commentField" layoutX="120.0" layoutY="170.0" prefHeight="100.0" prefWidth="250.0" promptText="Entrez votre commentaire" />

        <!-- Champ pour les suggestions d'amélioration -->
        <Label layoutX="20.0" layoutY="280.0" text="Suggestions d'amélioration :" />
        <TextArea fx:id="suggestionField" layoutX="120.0" layoutY="280.0" prefHeight="60.0" prefWidth="250.0" promptText="Entrez vos suggestions" />

        <!-- Bouton de soumission -->
        <Button fx:id="submitButton" layoutX="150.0" layoutY="350.0" text="Soumettre" onAction="#handleSubmitFeedback" />
    </children>
</AnchorPane>
