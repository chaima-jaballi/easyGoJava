<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.tn.pidev.controllers.TripFormController"
      spacing="20" style="-fx-padding: 20;">

    <GridPane hgap="10" vgap="15">
        <Label text="DÃ©part:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="departureField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Destination:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="destinationField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Heure (HH:mm):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="timeField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Places disponibles:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Spinner fx:id="seatsSpinner" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="10" initialValue="4"/>
            </valueFactory>
        </Spinner>

        <Label text="Prix (DT):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        <Button text="Enregistrer" onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>
</VBox>