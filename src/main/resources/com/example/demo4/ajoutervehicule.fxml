<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom right, #E0EAFC, #CFDEF3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo4.AjoutervehiculeController">

   <!-- Header Section -->
   <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
      <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #042c54; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);" text="GESTION DES VÉHICULES" />

      <HBox alignment="CENTER" spacing="20">
         <Button fx:id="reserverbutton1" onAction="#affichercontrats" style="-fx-background-color: linear-gradient(to bottom right, #1A2980, #26D0CE); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Afficher les Contrats" />
         <Button fx:id="afficherBoutton" onAction="#affichervehicule" style="-fx-background-color: linear-gradient(to bottom right, #1A2980, #26D0CE); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Aller offre" />
      </HBox>
   </VBox>

   <!-- Form Section -->
   <VBox layoutX="20" layoutY="120" prefWidth="300" spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0);">
      <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #042c54;" text="Informations du Véhicule" />

      <TextField fx:id="nameField" promptText="NOM vehicule" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />

      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label style="-fx-font-weight: bold;" text="Date création:" />
         <DatePicker fx:id="createdevField" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
      </HBox>

      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label style="-fx-font-weight: bold;" text="Date modification:" />
         <DatePicker fx:id="updatedevField" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
      </HBox>

      <TextField fx:id="descriptionevField" promptText="Description" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
      <TextField fx:id="imageevField" promptText="URL de l'image" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
      <Button onAction="#uploadImage" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Upload Image" />

      <TextField fx:id="prixevField" promptText="Prix" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
      <TextField fx:id="total_en_stockevField" promptText="Total en stock" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
      <ComboBox fx:id="idevComboBox" promptText="Catégorie" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
      <TextField fx:id="idmodifierField" promptText="ID à modifier" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;" />
   </VBox>

   <!-- Action Buttons -->
   <HBox layoutX="20" layoutY="550" spacing="15" />

   <!-- Table View Section -->
   <VBox layoutX="350" layoutY="120" prefHeight="400" prefWidth="600" spacing="10" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0);">
      <TextField fx:id="rechercher" promptText="Rechercher par NOM ou contenu" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5; -fx-pref-width: 300;" />

      <TableView fx:id="vehiculeTv" onMouseClicked="#choisirev" prefHeight="300" style="-fx-background-color: white; -fx-border-color: #042c54; -fx-border-radius: 5;">
         <columns>
            <TableColumn fx:id="nomevTv" prefWidth="100" style="-fx-font-weight: bold;" text="NOM vehicule" />
            <TableColumn fx:id="imageevTv" prefWidth="80" style="-fx-font-weight: bold;" text="IMAGE" />
            <TableColumn fx:id="updatedevTv" prefWidth="80" style="-fx-font-weight: bold;" text="Modifié le" />
            <TableColumn fx:id="createdevTv" prefWidth="80" style="-fx-font-weight: bold;" text="Créé le" />
            <TableColumn fx:id="descriptionevTv" prefWidth="120" style="-fx-font-weight: bold;" text="Description" />
            <TableColumn fx:id="prixevTv" prefWidth="60" style="-fx-font-weight: bold;" text="Prix" />
            <TableColumn fx:id="total_en_stockevTv" prefWidth="60" style="-fx-font-weight: bold;" text="Stock" />
            <TableColumn fx:id="categories_idevTv" prefWidth="80" style="-fx-font-weight: bold;" text="Catégorie" />
         </columns>
      </TableView>
   </VBox>

   <!-- Image Preview -->
   <VBox layoutX="350" layoutY="20" spacing="10" />

   <Canvas fx:id="myCanvas" height="150" layoutX="650" layoutY="20" width="250" />
   <Button layoutX="775.0" layoutY="550.0" onAction="#excelabonn" style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Excel" />
   <Button layoutX="703.0" layoutY="550.0" onAction="#pdfabonn" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="PDF" />
   <Button fx:id="supprimerBoutton" layoutX="586.0" layoutY="550.0" onAction="#supprimervehicule" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="SUPPRIMER" />
   <Button fx:id="modifierBoutton" layoutX="475.0" layoutY="550.0" onAction="#modifiervehicule" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="MODIFIER" />
   <Button fx:id="ajouterButton" layoutX="371.0" layoutY="550.0" onAction="#ajoutervehicule" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="AJOUTER" />

</AnchorPane>
