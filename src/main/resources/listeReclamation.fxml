<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="515.0" prefWidth="1052.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.2" fx:controller="com.esprit.tn.pidev.controllers.TicketReclamationController">
    <children>
        <VBox alignment="CENTER" layoutX="6.0" prefHeight="474.0" prefWidth="1022.0" spacing="20">
            <!-- Titre amélioré -->
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Liste des Réclamations" />

            <!-- Table améliorée avec des colonnes plus larges et un style de bordure -->
            <TableView fx:id="tableReclamations" prefHeight="350.0" prefWidth="995.0" style="-fx-border-color: #ccc; -fx-border-width: 1px;">
                <columns>
                    <TableColumn fx:id="colId" minWidth="50.0" prefWidth="100.0" text="ID" />
                    <TableColumn fx:id="colCategorie" minWidth="50.0" prefWidth="170.0" text="Catégorie" />
                    <TableColumn fx:id="colStatut" minWidth="50.0" prefWidth="170.0" text="Statut" />
                    <TableColumn fx:id="colDescription" minWidth="50.0" prefWidth="280.0" text="Description" />
                    <TableColumn fx:id="colDateCreation" minWidth="50.0" prefWidth="150.0" text="Date de Création" />
                    <TableColumn minWidth="50.0" prefWidth="150.0" text="Actions" />
                </columns>
            </TableView>

            <!-- HBox pour les boutons avec des espaces entre eux -->
            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
                <Button fx:id="btnRefresh" text="Rafraîchir" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" />
                <Button fx:id="btnRetour" text="Retour" prefWidth="120.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
