<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.esprit.tn.pidev.controllers.StatutReservationController"
      spacing="25" alignment="CENTER"
      style="-fx-padding: 40; -fx-background-color: linear-gradient(to bottom right, #E0EAFC, #CFDEF3);"
      prefWidth="1000" prefHeight="700">

    <!-- En-tête avec bouton retour et titre -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;">
        <ImageView fx:id="backImageView" fitWidth="40" fitHeight="40"
                   pickOnBounds="true" onMouseClicked="#navigateToAddTrip"
                   style="-fx-cursor: hand;">
            <Image url="@icons/fleche.png"/>
        </ImageView>
        <Label text="Détails de trajet"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #042c54; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>
    </HBox>

    <!-- Carte des détails du voyage -->
    <VBox fx:id="tripDetailsBox" spacing="20" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0); -fx-pref-width: 800;">

        <Label text="Informations du voyage"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #042c54; -fx-padding: 0 0 20 0;"/>

        <VBox spacing="15">
            <!-- Détails du voyage sans redondance -->
            <Label fx:id="tripDateLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
            <Label fx:id="departurePointLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
            <Label fx:id="destinationLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
            <Label fx:id="departureTimeLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
            <Label fx:id="returnTimeLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
            <Label fx:id="tripTypeLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
            <Label fx:id="relayPointsLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54; -fx-wrap-text: true;"/>
            <Label fx:id="availableSeatsLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
            <Label fx:id="ContributionLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54; -fx-wrap-text: true;"/>

        </VBox>
    </VBox>

    <!-- Boutons d'action -->
    <HBox spacing="30" alignment="CENTER" style="-fx-padding: 30 0 0 0;">
        <Button text="voir trajets" onAction="#navigateTotrajetslist"
                style="-fx-background-color: linear-gradient(to bottom right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0); -fx-cursor: hand;"/>

        <Button text="Voir réservations" onAction="#navigateTodriverdashboardPage"
                style="-fx-background-color: linear-gradient(to bottom right, #1A2980, #26D0CE); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0); -fx-cursor: hand;"/>

        <Button text="Gérer le voyage" onAction="#navigateToManageTrip"
                style="-fx-background-color: linear-gradient(to bottom right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0); -fx-cursor: hand;"/>

    </HBox>
</VBox>