<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.esprit.tn.pidev.controllers.ManageTripController"
      spacing="20" alignment="CENTER"
      style="-fx-padding: 40; -fx-background-color: linear-gradient(to bottom right, #E0EAFC, #CFDEF3);"
      prefWidth="1000" prefHeight="700">

    <!-- En-tête avec bouton retour -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;">
        <ImageView fx:id="backButton" fitWidth="40" fitHeight="40"
                   onMouseClicked="#navigateToStatutReservation">
            <Image url="@icons/fleche.png"/>
        </ImageView>
        <Label text="Gestion de trajet"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #042c54; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>
    </HBox>

    <!-- Détails du voyage -->
    <VBox fx:id="tripDetailsBox" spacing="15" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0); -fx-pref-width: 800;">

        <Label fx:id="reservationDateLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        <Label fx:id="departurePointLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        <Label fx:id="destinationLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        <Label fx:id="departureTimeLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        <Label fx:id="returnTimeLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        <Label fx:id="availableSeatsLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        <Label fx:id="tripTypeLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
        <Label fx:id="contributionLabel" style="-fx-font-size: 18px; -fx-text-fill: #042c54;"/>
    </VBox>

    <!-- Boutons d'action -->
    <HBox spacing="30" alignment="CENTER">
        <Button text="Modifier" onAction="#handleModifyReservation"
                style="-fx-background-color: linear-gradient(to bottom right, #1A2980, #26D0CE); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>
        <Button text="Supprimer" onAction="#handleDeleteReservation"
                style="-fx-background-color: linear-gradient(to bottom right, #E74C3C, #C0392B); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>
    </HBox>
</VBox>