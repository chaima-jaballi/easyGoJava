<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="474.0" prefWidth="689.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.2" fx:controller="com.esprit.tn.pidev.controllers.HistoriqueReclamationController">
    <children>
        <VBox alignment="CENTER" prefHeight="474.0" prefWidth="661.0" spacing="20">

            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Historique des Réclamations" />


            <TableView fx:id="tableHistorique" prefHeight="350.0" prefWidth="640.0" style="-fx-border-color: #ccc; -fx-border-width: 1px;">
                <columns>
                    <TableColumn fx:id="colId" minWidth="50.0" prefWidth="100.0" text="ID" />
                    <TableColumn fx:id="colTicketId" minWidth="50.0" prefWidth="120.0" text="ID Réclamation" />
                    <TableColumn fx:id="colMessage" minWidth="50.0" prefWidth="200.0" text="Message" />
                    <TableColumn fx:id="colDateAction" minWidth="50.0" prefWidth="130.0" text="Date d'Action" />
                    <TableColumn fx:id="colUserId" minWidth="50.0" prefWidth="130.0" text="ID Utilisateur" />
                </columns>
            </TableView>


            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
                <Button fx:id="btnRefresh" text="Rafraîchir" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" />
                <Button fx:id="btnRetour" text="Retour" prefWidth="120.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
